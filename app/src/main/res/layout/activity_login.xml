<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginTop="@dimen/px_100.0_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/Login_margin_Theme">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:text="账号："
            android:textSize="@dimen/px_18_sp"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_account"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_account"
                style="@style/EditText_Theme"
                android:inputType="number"
                android:maxLength="11"
                android:layout_weight="1"
                android:background="@null"
                android:hint="手机号" />
        </android.support.design.widget.TextInputLayout>
        <ImageView
            android:id="@+id/iv_del_account"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="invisible"
            tools:visibility="visible"
            android:src="@mipmap/ic_launcher"/>
    </LinearLayout>
    <View
        style="@style/Login_margin_Theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1.0_dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_marginTop="@dimen/px_10.0_dp"
        android:layout_width="match_parent"
        style="@style/Login_margin_Theme"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:textSize="@dimen/px_18_sp"
            android:text="密码："/>

        <android.support.design.widget.TextInputLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/til_pwd">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/et_pwd"
                android:inputType="textPassword"
                style="@style/EditText_Theme"
                android:background="@null"
                android:hint="请输入密码" />
        </android.support.design.widget.TextInputLayout>

        <ImageView
            android:id="@+id/iv_del_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            tools:visibility="visible" />
        <ImageView
            android:id="@+id/iv_show_pwd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>
    <View
        style="@style/Login_margin_Theme"
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_1.0_dp"
        android:background="@color/black"/>
</LinearLayout>